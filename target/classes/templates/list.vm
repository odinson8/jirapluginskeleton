$webResourceManager.requireResource("com.veniture.resourceManagement:resourceManagement-resources")

<html>

<head>
    <title>All Tutorial Issues &mdash; Issue CRUD Tutorial</title>

    <!-- 	Bootstrap v2.3.2 -->
    <link rel="stylesheet" media="all"
        href="https://s3.amazonaws.com/dynatable-docs-assets/css/bootstrap-2.3.2.min.css" />
    <!-- Plugin styles -->
    <link rel="stylesheet" media="all" href="https://s3.amazonaws.com/dynatable-docs-assets/css/jquery.dynatable.css" />

    <link rel="stylesheet" media="all" href="https://s3.amazonaws.com/dynatable-docs-assets/css/jquery.dynatable.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js">
    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>

    <!-- JS Pluging -->
    <script type='text/javascript' src='https://s3.amazonaws.com/dynatable-docs-assets/js/jquery.dynatable.js'></script>

    <meta name="decorator" content="atl.general">
    <script>
        AJS.$(document).ready(function () {
            var table = AJS.$('#issueTable').DataTable();

            AJS.$('#issueTable tbody').on('click', 'tr', function () {
                AJS.$(this).toggleClass('selected');
            });

            AJS.$('#calculateButton').on('click', function () {
                 Swal.fire(
                'Good job!',
                 table.rows('.selected').data().length + ' row(s) selected',
                'success'
                )
            });
        });
    </script>
</head>

<body id="jira>
    <div class="content-container">
        <div class="content-body">
            <div class="container">
                <table id="issueTable" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th>Key</th>
                            <th>Summary</th>
                            <th>Kapasite Abap</th>
                            <th>Kapasite Sap</th>
                        </tr>
                    </thead>
                    <tbody>
                        #foreach( $issue in $issues )
                        <tr>
                            <td>$issue.getKey()</td>
                            <td>$issue.getSummary()</td>
                            <td>$issue.getCustomFieldValue($kapasiteAbapCf)</td>
                            <td>$issue.getCustomFieldValue($kapasiteSapCf)</td>
                        </tr>
                        #end
                    </tbody>
                    <tfoot>
                        <tr>
                           <th>Key</th>
                           <th>Summary</th>    
                           <th>Kapasite Abap</th>
                           <th>Kapasite Sap</th>
                        </tr>
                    </tfoot>
                </table>
                <button class="aui-button" id="calculateButton">Calculate</button>
            </div>
        </div>
    </div>
</body>

</html>