$webResourceManager.requireResource("com.veniture.resourceManagement:resourceManagement-resources")

<html>
<head>
    <title>FLO DEMO</title>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap.min.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>

    <meta name="decorator" content="atl.general">
    <script>
        AJS.$(document).ready(function () {
            var table = AJS.$('#issueTable').DataTable();

            AJS.$('#issueTable tbody').on('click', 'tr', function () {
                AJS.$(this).toggleClass('selected');
            });

            AJS.$('#calculateButton').on('click', function () {
                 Swal.fire(
                'Good job!',
                 table.rows('.selected').data().length + ' row(s) selected',
                'success'
                )
            });
        });
    </script>
</head>

<body id="jira>
    <div class="content-container">
        <div class="content-body">
            <div class="container">
                <table id="issueTable" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Key</th>
                            <th>Summary</th>
                            <th>Kapasite Abap</th>
                            <th>Kapasite Sap</th>
                        </tr>
                    </thead>
                    <tbody>
                        #foreach( $issue in $issues )
                        <tr>
                            <td>$issue.getKey()</td>
                            <td>$issue.getSummary()</td>
                            <td>$issue.getCustomFieldValue($kapasiteAbapCf)</td>
                            <td>$issue.getCustomFieldValue($kapasiteSapCf)</td>
                        </tr>
                        #end
                    </tbody>
                    <tfoot>
                        <tr>
                           <th>Key</th>
                           <th>Summary</th>    
                           <th>Kapasite Abap</th>
                           <th>Kapasite Sap</th>
                        </tr>
                    </tfoot>
                </table>
                <button class="aui-button" id="calculateButton">Calculate</button>
            </div>
        </div>
    </div>
</body>

</html>